<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_bar" />

    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/ic_finance"
            app:tabIconSelected="@mipmap/ic_finance_on"
            app:tabText="@string/finance"
            app:tabTextSize="12sp"
            app:textColorSelected="@color/colorPrimary" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@mipmap/ic_personal"
            app:tabIconSelected="@mipmap/ic_personal_on"
            app:tabText="@string/personal"
            app:tabTextSize="12sp"
            app:textColorSelected="@color/colorAccent" />

    </com.yinglan.alphatabs.AlphaTabsIndicator>

</RelativeLayout>